
<?xml version="1.0" encoding="utf-8" standalone="yes" ?>

<Window size="500,32">

    <ListContainerElement name="FeedTextVerticalLayout" height="27" inset="5,0,0,5" menu="true" >
		<HorizontalLayout>	
			<VerticalLayout name="FrameLayout">
				<HorizontalLayout>
				
					<VerticalLayout width="10">																<!-- 왼쪽 공백 -->
					</VerticalLayout>
									
					<HorizontalLayout>
						<VerticalLayout>
							
							<VerticalLayout height="5" />
							
							<VerticalLayout height="15" name="NameVerticalLayout" visible="false" >			<!-- 이름 영역 출력안함 -->
								<HorizontalLayout inset="0,0,0,0">
								
									<HorizontalLayout name="NameLayout" width="0">
										<Button name="feed_NameLabel" text="[이름]" 
											   textcolor="#FF333333" disabledtextcolor="#FFA7A6AA" 
											   font="7" endellipsis="true" align="left" />
									</HorizontalLayout>
									
									<Control width="8" />
									
									<HorizontalLayout width="100" name="TimeLayout">
										<Label name="feed_DateLabel" text="오후 00:00" 
											   textcolor="#FFB9B9B9" disabledtextcolor="#FFA7A6AA" 
											   font="10" />
									</HorizontalLayout>
									
									<HorizontalLayout width="58" name="RetryLayout" visible="false">
										<Button name="feed_ReSendButton" width="36" text="재전송" font="10" textcolor="#FF0000FF" disabledtextcolor="#00000000" padding="0,0,6,0" />
										<Control height="17" width="16" bkimage="chat_ico_sendfail.png" />
									</HorizontalLayout>
									
								</HorizontalLayout>
							</VerticalLayout>					
							
							<VerticalLayout height="5" name="SpaceVerticalLayout" visible="false" />
							
							<VerticalLayout>						
								<HorizontalLayout>
								
									<VerticalLayout name="IndentVerticalLayout" width="10" height="10">					<!-- 텍스트 왼쪽 • 표시 -->
											<!--<Label name="IndentLabel" width="10" height="10"  align="left"
												text="•" textcolor="#FF9C9C9C" disabledtextcolor="#FFA7A6AA" font="2"/>	-->
											<Control height="4" />
											<Control width="10" height="4" bkimage="troom_bl_dot_02.png" />
											<Control />
									</VerticalLayout>
								
									<HorizontalLayout name="BubbleVerticalLayout" >							<!-- 텍스트 영역 -->
										<!-- BubbleText name="BubbleContent" font="0"  parsingemoticon="true" 
													text="[대화내용]" textcolor="#FF000000" textpadding="2,0,2,0" / -->
									</HorizontalLayout>

								</HorizontalLayout>
							</VerticalLayout>
							
							<!-- VerticalLayout height="5" / -->
							
						</VerticalLayout>
					</HorizontalLayout>
					
					<VerticalLayout width="16" name="PinVerticalLayout" >									<!-- 중요버튼 영역 -->
						<Control height="3" />
						<Option name="feed_PinButton" width="16" height="16" relativepos="0,0,0,0" 
								textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" 
								align="center" 
								normalimage=	"troom_ic_flag_off.png"
								hotimage=		"troom_ic_flag_off.png" 
								pushedimage=	"troom_ic_flag_off.png" 
								selectedimage=	"troom_ic_flag_on.png"/>							
						<Option name="feed_BookmarkButton" visible="false" />		
					</VerticalLayout>
					
				</HorizontalLayout>			
			</VerticalLayout>
			
			<VerticalLayout width="5">																<!-- 오픈쪽 공백 -->
			</VerticalLayout>
		</HorizontalLayout>	
    </ListContainerElement>
	
</Window>