<Window>
  <ListContainerElement name ="finder_member_item"
                        height="45"
						            multiselect="true">
    <VerticalLayout height="45"> <!-- 멤버 아이템간 간격을 위한 레이아웃-->
			<HorizontalLayout hegiht="45">
				<!-- 좌우 간격을 위한 레이아웃-->
				<Control width="1" />
				<VerticalLayout height="45">
					<HorizontalLayout height="44">
						<HorizontalLayout name="finder_member_item_layout" height="44">
							<Control width="5" />
							<VerticalLayout height="44" align="center">
								<!-- 이름 과 상태 정보 -->
								<HorizontalLayout height="44">
									<VerticalLayout height="44" width="41">
										<Control height="15" />
										<Label name="finder_member_name"
														 height="14"
														 width="41"
														 text="이수연"
														 font="7"
														 align="left"
														 textcolor="#333333"
														 endellipsis="true"
										/>
										<Control height="15" />
									</VerticalLayout>
									<Control width="8" />
									<VerticalLayout height="44" width="13" align="center">
										<Control height="15" />
										<Control name="finder_member_status_mobile"
														bkimage="ico_poc_mobile.png"
														width="13"
														height="13"
														visible="false"
														enable="false"
										/>
										<Control name="finder_member_status_pc"
														 width="13"
														 height="13"
														 bkimage="ico_poc_pc.png"
														 visible="false"
														 enable="false"
										/>
										<Control height="16" />
									</VerticalLayout>
									<Control />
								</HorizontalLayout>
								<Control />
							</VerticalLayout>
							<VerticalLayout height="44" width="183" align="center">
								<!-- 친구추가/메시지/메일/문자/프로필 -->
								<Control height="10" />
								<HorizontalLayout height="26" width="183" align="right">
									<Control />
									<VerticalLayout height="26" width="19" align="center">
										<Control height="4" />
										<Button name="finder_member_addbuddybtn"
														width="19"
														height="19"
														align="center"
														tooltip="네이트온 친구 추가하기"
														normalimage= "troom_bt_mem_addasbuddy.png"
														hotimage=	 "troom_bt_mem_addasbuddy_over.png"
														pushedimage= "troom_bt_mem_addasbuddy_down.png"
														visible ="true"
														enable ="false"
										/>
										<Control height="3" />
									</VerticalLayout>
									<Control width="10" />
									<Button name="finder_member_chatbtn"
													width="26"
													height="26"
													align="center"
													tooltip="네이트온 대화하기"
													normalimage= "troom_bt_mem_chatting.png"
													hotimage=	 "troom_bt_mem_chatting_over.png"
													pushedimage= "troom_bt_mem_chatting_down.png"
									/>
									<Control width="5" />
									<Button name="finder_member_mailbtn"
													width="26"
													height="26"
													align="center"
													tooltip="메일 보내기"
													normalimage= "troom_bt_mem_mail.png"
													hotimage=	 "troom_bt_mem_mail_over.png"
													pushedimage= "troom_bt_mem_mail_down.png"
													enable="false"
									/>
									<Control width="5" />
									<Button name="finder_member_smsbtn"
													width="26"
													height="26"
													align="center"
													tooltip="문자 보내기"
													normalimage= "troom_bt_mem_sms.png"
													hotimage=	 "troom_bt_mem_sms_over.png"
													pushedimage= "troom_bt_mem_sms_down.png"
													enable="false"
									/>
									<Control width="5" />
									<Button name="finder_member_profilebtn"
													width="26"
													height="26"
													align="center"
													tooltip="팀룸 프로필 보기"
													normalimage= "troom_bt_mem_profile.png"
													hotimage=	 "troom_bt_mem_profile_over.png"
													pushedimage= "troom_bt_mem_profile_down.png"
													enable="false"
									/>
									<Button name="finder_member_editmyprofilebtn"
													width="26"
													height="26"
													align="center"
													tooltip="내 프로필 보기"
													normalimage= "troom_bt_mem_editmyprofile.png"
													hotimage=	 "troom_bt_mem_editmyprofile_over.png"
													pushedimage= "troom_bt_mem_editmyprofile_down.png"
													visible = "false"
													enable ="false"
									/>
								</HorizontalLayout>
								<Control height="8" />
							</VerticalLayout>
						</HorizontalLayout>
						<Control width="10" />
					</HorizontalLayout>
					<Control height="1" bkcolor="#FFF1F1F1" />
				</VerticalLayout>
				<Control width="5" />
			</HorizontalLayout>
    </VerticalLayout>
  </ListContainerElement>
</Window>