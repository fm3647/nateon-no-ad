
<?xml version="1.0" encoding="utf-8" standalone="yes" ?>

<Window size="500,84">

    <ListContainerElement name="FeedCommentVerticalLayout" height="84" inset="5,10,0,5" menu="true" >	
		<HorizontalLayout>	
			<VerticalLayout name="FrameLayout">
				<HorizontalLayout>
				
					<VerticalLayout width="10">																<!-- 왼쪽 공백 -->
					</VerticalLayout>
									
					<HorizontalLayout>
						<VerticalLayout>
						
							<VerticalLayout height="5" />
							
							<VerticalLayout height="15" name="NameVerticalLayout">							<!-- 이름 영역 -->
								<HorizontalLayout inset="0,0,0,0">
								
									<HorizontalLayout name="NameLayout" width="0">
										<Button name="feed_NameLabel" text="[이름]" 
											   textcolor="#FF333333" disabledtextcolor="#FFA7A6AA" 
											   font="7" endellipsis="true" align="left" />
									</HorizontalLayout>
									
									<Control width="8" />
									
									<HorizontalLayout width="100" >
										<Label name="feed_DateLabel" text="오후 00:00" 
											   textcolor="#FFB9B9B9" disabledtextcolor="#FFA7A6AA" 
											   font="10" />
									</HorizontalLayout>
									
								</HorizontalLayout>
							</VerticalLayout>
							
							<VerticalLayout height="7" name="SpaceVerticalLayout" />						<!-- 위아래 중간 공백 -->
							
							<VerticalLayout>
								<HorizontalLayout>
									<VerticalLayout name="IndentVerticalLayout" width="52">						<!-- 텍스트 왼쪽 댓글 표시 -->
										<HorizontalLayout width="52" >									
											<Control width="52" height="12" bkimage="troom_ic_comment.png" />	
										</HorizontalLayout>										
									</VerticalLayout>
									
									
									<HorizontalLayout name="BubbleVerticalLayout" >							<!-- 텍스트 영역 -->
										<!-- BubbleText name="BubbleContent" font="0"  parsingemoticon="true" 
													text="[대화내용]" textcolor="#FF000000" textpadding="2,0,2,0" / -->
									</HorizontalLayout>
								</HorizontalLayout>
														
								<HorizontalLayout name="OwnerVerticalLayout" height="12">							<!-- 텍스트 영역  -->
									
									<Control width="52" />
									
									<Label text="(" width="5"
										   textcolor="#FF999999" font="10" align="left" />
										   
									<HorizontalLayout name="OrgNameLayout" width="0">	   
										<Button name="feed_OrgName" text="[작성자]"
											   textcolor="#FF999999" font="9" align="left" endellipsis="true" />
									</HorizontalLayout>
									
									<Label text="님의 파일 - " width="65"
										   textcolor="#FF999999" font="10" align="left" />
									
									<HorizontalLayout name="OrgFileLayout" width="0">
										<Button name="feed_OrgFile" text="[파일]" 
											   textcolor="#FF2B508D" font="10" align="left" endellipsis="true" />
									</HorizontalLayout>	   

									<Label text=")" width="5"
										   textcolor="#FF999999" font="10" align="left" />
										   
								</HorizontalLayout>
									
							</VerticalLayout>
							
							<VerticalLayout height="5" />
							
						</VerticalLayout>
					</HorizontalLayout>
					
					<VerticalLayout width="16" name="PinVerticalLayout" >									<!-- 중요버튼 영역 -->
						<Control height="3" />
						<Option name="feed_PinButton" width="16" height="16" relativepos="0,0,0,0" 
								textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" 
								align="center" 
								normalimage=	"troom_ic_flag_off.png"
								hotimage=		"troom_ic_flag_off.png" 
								pushedimage=	"troom_ic_flag_off.png" 
								selectedimage=	"troom_ic_flag_on.png"/>
						<Option name="feed_BookmarkButton" visible="false" />		
					</VerticalLayout>
					
				</HorizontalLayout>			
			</VerticalLayout>
			
			<VerticalLayout width="5">																<!-- 오픈쪽 공백 -->
			</VerticalLayout>
		</HorizontalLayout>	
    </ListContainerElement>
	
</Window>