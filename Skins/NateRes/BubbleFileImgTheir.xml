<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Window>
    <ListContainerElement name="BubbleImageTheirVerticalLayout" height="152" inset="0,5,10,5">
        <HorizontalLayout>
            <VerticalLayout width="30">
                <Button name="ProfileThumb" 
                        relativepos="0,0,0,0" 
                        width="30" height="30" 
                        normalimage="highquality='true' file='buddy_profile_default_43x43.png' makecorner='100,100,100,100'" 
                        align="center" 
                />
                <Button name="ImageFrame" 
                        mouse="false" 
                        float="true" relativepos="0,0,0,0" 
                        width="30" height="30" 
                        normalimage="file='profileimg_frame_30x30.png' highquality='true'" 
                />
            </VerticalLayout>
            <Control width="10" />
            <VerticalLayout>
                <HorizontalLayout height="15">
                    <HorizontalLayout name="NameLayout" width="0" >
						<Label name="NameLabel" text="[이름]" textcolor="#FF9C9C9C" disabledtextcolor="#FFA7A6AA" font="2" endellipsis="true" />
					</HorizontalLayout>								
					<Control width="8" />								
					<HorizontalLayout width="100" name="DateLayout">
						<Label name="DateLabel" text="오후 00:00" textcolor="#FFB9B9B9" disabledtextcolor="#FFA7A6AA" font="2" />
					</HorizontalLayout>
                    <Control />
                </HorizontalLayout>
				
                <Control height="6" />
				
                <VerticalLayout>
                    <Button name="FileThumbImage" 
                            keyboard="false" 
                    />
                    <Control height="5" />
                    <HorizontalLayout name="ProgressLayout" height="18" visible="false">
                        <VerticalLayout width="50">
                            <Control />
                            <Progress name="TransProgress" 
                                      width="50" height="4" 
                                      textcolor="#FF000000" 
                                      disabledtextcolor="#FFA7A6AA" 
                                      align="center" 
                                      bkimage="file='img_progress2_blank.png' corner='5,0,5,0'" 
                                      foreimage="file='img_progress2.png' corner='5,0,5,0'" 
                                      min="0" max="100" 
                                      value="0" hor="true" 
                            />
                            <Control />
                        </VerticalLayout>
                        <Control width="5" />
                        <Button name="CancelTransButton" 
                                width="17" height="18" 
                                textcolor="#FF000000" 
                                disabledtextcolor="#FFA7A6AA" 
                                align="center" 
                                normalimage="chat_btn_cancelfile.png" 
                                hotimage="chat_btn_cancelfile_over.png" 
                                pushedimage="chat_btn_cancelfile_down.png" 
                        />
                        <Control />
                    </HorizontalLayout>
                    <HorizontalLayout name="ButtonLayout" height="11">
                        <HorizontalLayout name="FileDownLayout" width="23">
                            <HorizontalLayout name="ReadyLayout" width="23">
                                <Button name="FileSaveButton" 
                                        text="저장" 
                                        width="23" 
                                        keyboard="false" 
                                        textcolor="#FF0000FF" 
                                        disabledtextcolor="#FFA7A6AA" 
                                        font="3" 
                                        align="left" 
                                />
                            </HorizontalLayout>
                            <HorizontalLayout name="CompleteLayout" visible="false"
                                              width="23">
                                <Button name="OpenFolderButton" visible="false" 
                                        text="폴더" 
                                        width="23" 
                                        keyboard="false" 
                                        textcolor="#FF0000FF" 
                                        disabledtextcolor="#FFA7A6AA" 
                                        font="3" 
                                        align="left" 
                               	/>
                            </HorizontalLayout>
                        </HorizontalLayout>
                        <HorizontalLayout name="ReadyLayoutAs" visible="false"
                                          width="98">
                            <Control width="5" />
                            <Button name="FileSaveOtherButton" 
                                    text="다른이름으로 저장" 
                                    keyboard="false" 
                                    textcolor="#FF0000FF" 
                                    disabledtextcolor="#FFA7A6AA" 
                                    font="3" 
                                    align="left" 
                                    endellipsis="true" 
                            />      
                        </HorizontalLayout>
                        <Control width="5" />
                        <Button name="FileShareButton" 
                                text="전달" 
                                width="23" 
                                keyboard="false" 
                                textcolor="#FF0000FF" 
                                disabledtextcolor="#FFA7A6AA" 
                                font="3" 
                                align="left" 
                        />
                    </HorizontalLayout>
                </VerticalLayout>
            </VerticalLayout>
        </HorizontalLayout>
    </ListContainerElement>
</Window>