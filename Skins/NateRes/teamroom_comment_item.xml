						      />
                <Control width="3" />
              </HorizontalLayout>
					    <HorizontalLayout height="16" width="35">
						    <Button name="comment_impo" 
                        bkimage="troom_ic_flag_off.png"
                        height="16"
							          width="16"
						    />
                <Control width="3" />
                <Button name="comment_favo"
                        bkimage="troom_ic_scrap_off.png"
                        height="16"
							          width="16"
						    />
					    </HorizontalLayout>
            </HorizontalLayout>
				  </VerticalLayout>
				  <Control width="5" />
			  </HorizontalLayout>
			  <Control height="7" />
        <HorizontalLayout>
          <Control width="15" />
          <HorizontalLayout defaultHeight="39" defaultWidth="270" name="comment_msg_layout">
